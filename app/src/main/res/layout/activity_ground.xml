<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="reversi.project.tki.reversichampion.ground.GroundActivity">

    <data>

        <variable
            name="activity"
            type="reversi.project.tki.reversichampion.ground.GroundActivity" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cons"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7f876b"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            app:spanCount="8"
            tools:listitem="@layout/view_holder_ground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="#aafa"
            android:elevation="5dp"
            android:orientation="vertical"
            android:translationZ="5dp"
            app:layout_constraintTop_toBottomOf="@+id/rv">



        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</layout>